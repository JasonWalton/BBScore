<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlScoresheetLinear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tvSSUsLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name"
        android:layout_gravity="left" />
    <TextView
        android:id="@+id/tvSSThemLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent Name"
        android:layout_gravity="right" />

	<View
	    android:id="@+id/linebreakLinear"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />    
    <!-- Insert rows for scores -->

    <Button
        android:id="@+id/btViewScorekeeperLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Back to Scorekeeper" />
</LinearLayout>